generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  price       Int
  imageUrl    String
  stock       Int      @default(0)
  createdAt   DateTime @default(now())
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id])
}

model Category {
  id       String    @id @default(cuid())
  name     String    @unique
  products Product[]
}

model Order {
  id          String   @id @default(cuid())
  userEmail   String
  items       Json
  total       Int
  createdAt   DateTime @default(now())
}
